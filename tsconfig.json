{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2022",
    "module": "NodeNext",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "importHelpers": true,
  },
  "include": ["src"],
}
